query GetScheme {
  __schema {
    queryType {
      name
      kind
    }
  }
}

query Estudiantes {
  students {
    Nombre
    AluXXXX
    markdown
  }
}

mutation CreaEstudiante($teacher: String!) {
  addStudent(AluXXXX: $teacher, Nombre: "Casiano") {
    AluXXXX
    Nombre
  }   
}


mutation ponNota($alu: String!, $nota: String!) {
  setMarkdown(AluXXXX: $alu, markdown: $nota) {
    AluXXXX
    Nombre
    markdown
  }   
}

query Estudiante($alu: String!) {
    student(AluXXXX: $alu) {
        Nombre
        markdown
    }
}

query StudentType {
  __type(name: "Student") {
    name
    fields {
      name
      type {
        name
        description
      } 
    }
  }
}
